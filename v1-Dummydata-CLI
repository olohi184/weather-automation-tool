# weather_tool_v1.py
# Simple Weather Automation Tool (Version 1 - Dummy Data)

def get_weather(city):
    # Dummy weather data for now
    weather_data = {
        "Abuja": {"temperature": 30, "condition": "Sunny"},
        "Lagos": {"temperature": 28, "condition": "Rainy"},
        "London": {"temperature": 15, "condition": "Cloudy"},
        "New York": {"temperature": 20, "condition": "Clear"}
    }
    
    # Return weather if city is in dictionary, else fallback
    return weather_data.get(city, {"temperature": "N/A", "condition": "Unknown"})

def main():
    print("🌦️ Welcome to the Weather Automation Tool (V1)")
    city = input("Enter a city name: ")

    weather = get_weather(city)

    print(f"\nWeather Report for {city}:")
    print(f"Temperature: {weather['temperature']}°C")
    print(f"Condition: {weather['condition']}")

if __name__ == "__main__":
    main()
Welcome to the Weather Automation Tool (V1)
Enter a city name: Lagos

Weather Report for Lagos:
Temperature: 28°C
Condition: Rainy
